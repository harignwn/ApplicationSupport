@page
@model HistoryModel

<h2>Riwayat Rencana Produksi</h2>

@foreach (var p in Model.AllPlans)
{
    <div class="mb-4">
        <h5><strong>Tanggal Input:</strong> @p.TanggalInput.ToString("dddd, dd MMMM yyyy HH:mm")</h5>

        <div class="row">
            <div class="col-md-6">
                <h6>Input Awal</h6>
                <table class="table table-bordered text-center">
                    <thead class="table-secondary">
                        <tr>
                            <th>Sen</th>
                            <th>Sel</th>
                            <th>Rab</th>
                            <th>Kam</th>
                            <th>Jum</th>
                            <th>Sab</th>
                            <th>Min</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@p.Senin</td>
                            <td>@p.Selasa</td>
                            <td>@p.Rabu</td>
                            <td>@p.Kamis</td>
                            <td>@p.Jumat</td>
                            <td>@p.Sabtu</td>
                            <td>@p.Minggu</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-md-6">
                <h6>Output Diperbaiki</h6>
                <table class="table table-bordered text-center">
                    <thead class="table-success">
                        <tr>
                            <th>Sen</th>
                            <th>Sel</th>
                            <th>Rab</th>
                            <th>Kam</th>
                            <th>Jum</th>
                            <th>Sab</th>
                            <th>Min</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@p.SeninFixed</td>
                            <td>@p.SelasaFixed</td>
                            <td>@p.RabuFixed</td>
                            <td>@p.KamisFixed</td>
                            <td>@p.JumatFixed</td>
                            <td>@p.SabtuFixed</td>
                            <td>@p.MingguFixed</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <hr />
    </div>
}
